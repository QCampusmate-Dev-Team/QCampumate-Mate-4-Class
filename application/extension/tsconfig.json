{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": false,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "dom", "dom.iterable"],
    "skipLibCheck": true,
    "types": ["chrome", "vitest/globals", "element-plus/global"],
    "allowJs": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/extension/manifest.json", "test/*.test.ts", "locals/*.test.ts", "locals/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}

